.container {
  width: 100%;
  height: 60rpx;
  display: flex;
}

.index-container {
  display: flex;
  align-items: baseline;
}

.plain {
  font-size: 32rpx;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}

.line {
  height: 44rpx;
  margin-right: 14rpx;
  border-left: 1px solid black;
}

.date-contarner {
  display: flex;
  flex-direction: column;
}

.month {
  font-size: 24rpx;
  line-height: 32rpx;
}

.year {
  font-size: 20rpx;
}